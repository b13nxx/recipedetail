h1
  margin 0 0 20px
  padding-bottom 8px
  font-family 'Thasadith', sans-serif
  border-bottom 1px solid #ba0c2f

h2, h3
  margin 0
  font-family 'Cabin', sans-serif
  font-weight 500

body
  margin 20px auto
  padding 15px 30px
  width 90%
  max-width 1080px
  box-shadow 0 0 10px 0 rgba(0, 0, 0, 0.75)
  border-radius 5px
  box-sizing border-box

  .cart-button
    margin-top 16px
    padding 10px
    right 15px
    position fixed
    z-index 2
    font-size 24px
    color #fff
    background-color #ba0c2f
    cursor pointer

    &:active
      background-color #e20f39

  .cart-container
    margin-top 60px
    padding 10px
    width 260px
    height 400px
    right -220px
    position fixed
    z-index 2
    background-color #fff
    border 1px solid #cacaca
    display flex
    flex-direction column
    justify-content space-between

    &.visible
      right -1px

    & .cart-content
      margin-top 15px
      padding-right 8px
      overflow-y auto
      flex-grow 1

      &::-webkit-scrollbar-button
        display none
        height 13px
        border-radius 0px
        background-color #aaa

        &:hover
          background-color #aaa

      &::-webkit-scrollbar-thumb
        background-color #cc
        border-radius 4px

        &:hover
          background-color #ccc

      &::-webkit-scrollbar-track
        background-color #efefef
        border-radius 4px

        &:hover
          background-color #efefef

      &::-webkit-scrollbar
        width 8px

      & .no-item
        font-family 'Inconsolata', monospace
        font-size 14px
        display none

        &.visible
          display block

      & .items .item
        display flex
        justify-content space-between
        align-items center

        &:not(:last-child)
          margin-bottom 8px

        &:hover
          & .title, & .count, & .price
            color #000

        & .title, & .count, & .price
          font-family 'Inconsolata', monospace
          color rgba(0, 0, 0, 0.68)

        & .title, & .count
          margin-right 10px
          font-size 14px

        & .count, & .price
          text-align right

        & .remove-item-button
          margin-right 10px
          padding 5px
          font-size 12px
          color #fff
          background-color #ba0c2f
          cursor pointer

          &:active
            background-color #e20f39

        & .title
          min-width 100px
          width 100px
          max-width 100px

        & .count
          min-width 24px
          width 24px
          max-width 24px

        & .price
          min-width 60.5px
          width 60.5px
          max-width 60.5px
          white-space nowrap

          .currency
            margin-right 5px

          span
            font-size 20px

          sup
            margin-left 2px
            top 2.5px
            position relative

    & .footer
      margin-top 15px
      display none
      justify-content flex-end
      align-items center

      &.visible
        display flex

      & .total-price
        margin-right 10px
        font-size 14px

      & .order-button
        padding 8px 5px
        font-family 'Inconsolata', monospace
        font-size 14px
        color #fff
        background-color #ba0c2f
        display flex
        align-items center
        cursor pointer
        user-select none

        &:active
          background-color #e20f39

        & span
          bottom 1px
          position relative

        & i
          margin-left 5px

.heading
  margin -4px 0 16px 0
  display flex
  align-items center

  i
    margin-right 10px
    font-size 24px

.top
  margin-bottom 30px
  display flex
  flex-direction column-reverse

  .left
    .ingredient-list
      display flex
      flex-direction column

      .item
        padding 6px 0
        position relative
        border-bottom 0.5px solid rgba(0, 0, 0, 0.22)
        font-family 'Inconsolata', monospace
        font-size 17px
        display flex
        flex-direction column
        z-index 1

        .title
          color rgba(0, 0, 0, 0.68)
          flex-grow 1
          display flex
          justify-content space-between
          align-items center

          &:hover
            color #000
            cursor pointer

          i
            margin-left 10px
            transition 0.1s linear
            transform-origin 70% 50%
            opacity 0.8

            &.rotated
              transform rotate(-90deg)

        .content
          margin-top 0
          height 0
          opacity 0

          &.visible
            margin-top 10px
            height auto
            opacity 1

          .product-list
            max-height 364px
            display flex
            justify-content center
            flex-wrap wrap
            overflow-y auto

            &::-webkit-scrollbar-button
              display none
              height 13px
              border-radius 0px
              background-color #aaa

              &:hover
                background-color #aaa

            &::-webkit-scrollbar-thumb
              background-color #cc
              border-radius 4px

              &:hover
                background-color #ccc

            &::-webkit-scrollbar-track
              background-color #efefef
              border-radius 4px

              &:hover
                background-color #efefef

            &::-webkit-scrollbar
              width 8px

            .product
              margin 5px
              padding 5px
              min-width 100px
              width 100px
              max-width 100px
              min-height 160px
              height 160px
              max-height 160px
              border 1px solid rgba(0, 0, 0, 0.17)
              display flex
              flex-direction column
              justify-content space-between
              align-items center

              .actions
                width 100%
                display flex
                justify-content space-between
                align-items center

                i
                  padding 5px
                  font-size 8px
                  color #fff
                  background-color #ba0c2f
                  cursor pointer

                  &:active
                    background-color #e20f39

                  &.remove-from-card-button, ^[7] .count
                    visibility hidden

                    &.visible
                      visibility visible

                .count
                  font-size 14px
                  color rgba(0, 0, 0, 0.68)

              img
                width 70%

              .product-price
                display flex
                flex-direction column
                align-items center

                .old-price
                  margin-bottom 2px
                  color rgba(0, 0, 0, 0.68)

                  sub
                    text-decoration line-through

                .final-price
                  .currency
                    margin-right -5px

                  span
                    font-size 20px

                  sup
                    margin-left -6px
                    top 2.5px
                    position relative

              .see-more-button
                padding 10px
                width 60%
                color #fff
                background-color #ba0c2f
                display flex
                justify-content space-around
                align-items center
                cursor pointer
                user-select none

                &:active
                  background-color #e20f39

                i
                  top 1px
                  position relative

  .right
    margin 0 0 30px 0
    min-width 40%
    display flex
    flex-direction column

    img
      margin-bottom 20px
      width 100%
      opacity 0.9

    .statistics
      display flex
      justify-content space-between

      div
        display flex
        flex-direction column
        align-items center

        p
          margin 5px 0
          font-family 'Inconsolata', monospace
          font-size 17px

          &:first-child
            font-weight 700
            color #ba0c2f

.bottom
  position relative
  z-index 1

  ol
    margin 0 0 0 -14px

    li
      font-family 'Inconsolata', monospace
      font-size 17px

      &:not(:last-child)
        margin-bottom 20px

@media only screen and (min-width: 580px)
  .top
    .right
      align-items center

      img, .statistics
        width 80%

@media only screen and (min-width: 880px)
  body
    margin 80px auto 40px

  .top
    flex-direction row

    .right
      margin 0 0 0 30px

      img, .statistics
        width 100%