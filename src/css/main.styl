h1
  margin 0 0 15px
  padding-bottom 8px
  font-family 'Thasadith', sans-serif
  border-bottom 1px solid #ba0c2f

h2
  margin 8px 0
  font-family 'Cabin', sans-serif
  font-weight 500

body
  margin 20px auto
  padding 15px 30px
  width 90%
  max-width 1080px
  box-shadow 0 0 10px 0 rgba(0, 0, 0, 0.75)
  border-radius 5px
  box-sizing border-box

.heading
  margin-bottom 16px
  display flex
  flex-direction column-reverse

  .left
    .list
      p
        margin 5px 0
        padding-bottom 5px
        border-bottom 0.5px solid rgba(0, 0, 0, 0.22)
        font-family 'Inconsolata', monospace
        font-size 17px
        color rgba(0, 0, 0, 0.68)

        &:hover
          color #000
          cursor pointer

  .right
    margin 0 0 20px 0
    display flex
    flex-direction column

    img
      margin-bottom 20px
      width 100%
      opacity 0.9

    .statistics
      display flex
      justify-content space-between

      div
        display flex
        flex-direction column
        align-items center

        p
          font-family 'Inconsolata', monospace
          font-size 17px

          &:first-child
            font-weight 700
            color #ba0c2f

.content
  ol
    margin 0 0 0 -14px

    li
      font-family 'Inconsolata', monospace
      font-size 17px

      &:not(:last-child)
        margin-bottom 20px

@media only screen and (min-width: 580px)
  .heading
    .right
      align-items center

      img, .statistics
        width 80%

@media only screen and (min-width: 880px)
  body
    margin 80px auto 20px

  .heading
    flex-direction row

    .right
      margin 0 0 0 30px
      justify-content center

      img, .statistics
        width 100%